<h3>{{viewTitle}}</h3>

<form action="/maquinario" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{maquinario._id}}">
    <div class="form-group">
        <label for="name">NOME:</label>
        <input type="text" class="form-control" id="name" name="name" value={{maquinario.name}}>
        <div class="text-danger">
            {{maquinario.nameError}}
        </div>
    </div>
    <div class="form-group">
        <label for="img">IMAGEM:</label>
        <input type="file" id="img" alt="Imagem do Maquinario" value={{maquinario.image}}>
        <div class="text-danger">
            {{maquinario.imageError}}
        </div>
    </div>
    <div class="form-group">
        <label for="review">Descricao:</label>
        <textarea id="review" name="review" class="form-control" value={{maquinario.description}}>
        </textarea>
    </div>
    <div class="form-group">
        <label for="responsable">Id do Responsavel:</label>
        <input type="text" name="resposable" id="responsable" class="form-control" value={{maquinario.responsableId}}>
    </div>
    <div class="form-group">
        <label for="modelo">Modelo: </label>
        <input type="text" class="form-control" name="modelo" id="modelo" value={{maquinario.modelo}}>
    </div>
    <div class="form-group">
        <label for="">Status:</label>
        <input type="radio" id="unable" name="status" value="unable" class="form-control" checked>
        <label for="unable" >Disponivel</label>
        <input type="radio" id="broken" name="status" value="broken" class="form-control">
        <label for="broken">Em manutencao</label>
        <input type="radio" id="disable" name="status" value="disable" class="form-control">
        <label for="disable">Desativado</label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
        <a class="btn btn-secondary" href="/maquinario/list"><i class="fa fa-list-alt"></i>Ver todos</a>
    </div>

</form>